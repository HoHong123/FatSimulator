<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Scenes.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_x="35dp"
        android:layout_y="56dp"
        android:background="@drawable/main_foh" />

    <ImageView
        android:id="@+id/bottomGuy"
        android:layout_width="196dp"
        android:layout_height="248dp"
        android:layout_gravity="bottom|left"
        android:rotation="45"
        android:layout_marginLeft="-80dp"
        android:layout_marginTop="-150dp"
        android:background="@drawable/guy" />

    <ImageView
        android:id="@+id/topGuy"
        android:layout_width="230dp"
        android:layout_height="295dp"
        android:layout_gravity="top|right"
        android:layout_marginRight="-100dp"
        android:layout_marginTop="-100dp"
        android:background="@drawable/guy"
        android:rotation="-120" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@color/colorBlack" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="40dp"
        android:text="파오후 키우기"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="45dp" />


    <!--
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="시작하려면 터치하세요"
        android:textAlignment="center"
        android:textColor="@color/colorGray"
        android:textSize="28dp" />
     -->
    <Button
        android:id="@+id/sign"
        android:onClick="mOnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="로그인"
        android:textAlignment="center"
        android:textColor="@color/colorGray"
        android:textSize="28dp" />

</FrameLayout>